# ============================================================================
# ScalpingBot v2.4 비밀 설정 파일 (템플릿)
# ============================================================================
# 사용법:
#   1. 이 파일을 secrets.yaml로 복사
#   2. 실제 API 키와 계좌 정보 입력
#   3. secrets.yaml은 절대 Git에 커밋하지 마세요!
# ============================================================================

# -----------------------------------------
# 한국투자증권 API 설정
# -----------------------------------------
kis:
  # 앱 키 (한투 개발자 센터에서 발급)
  app_key: "YOUR_APP_KEY_HERE"
  app_secret: "YOUR_APP_SECRET_HERE"
  
  # 계좌 정보
  account_number: "12345678"   # 종합계좌번호 (8자리)
  account_code: "01"           # 계좌 상품코드 (보통 01)
  
  # HTS 사용자 ID (조건검색용)
  # HTS 로그인할 때 사용하는 ID
  hts_id: "YOUR_HTS_ID"
  
  # API 서버 설정
  # 실전: https://openapi.koreainvestment.com:9443
  # 모의: https://openapivts.koreainvestment.com:29443
  base_url: "https://openapi.koreainvestment.com:9443"
  
  # 웹소켓 설정 (실시간 체결/호가)
  # 실전: ws://ops.koreainvestment.com:21000
  # 모의: ws://ops.koreainvestment.com:31000
  websocket_url: "ws://ops.koreainvestment.com:21000"
  
  # 환경 설정 (실전: P, 모의: V)
  environment: "P"

# -----------------------------------------
# Discord Webhook 설정
# -----------------------------------------
discord:
  webhook_url: "https://discord.com/api/webhooks/YOUR_WEBHOOK_ID/YOUR_WEBHOOK_TOKEN"
  
  # 추가 웹훅 (선택)
  # 긴급 알림용 별도 채널
  emergency_webhook_url: ""

# -----------------------------------------
# Gemini API 설정 (Google AI)
# -----------------------------------------
# API 키 발급: https://aistudio.google.com/app/apikey
gemini:
  api_key: "YOUR_GEMINI_API_KEY_HERE"

# -----------------------------------------
# 주의사항
# -----------------------------------------
# 1. 이 파일을 secrets.yaml로 복사 후 사용
# 2. .gitignore에 secrets.yaml 추가 필수
# 3. API 키는 절대 외부에 노출하지 마세요
# 4. 모의투자로 충분히 테스트 후 실전 전환
